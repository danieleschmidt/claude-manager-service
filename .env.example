# Claude Manager Service - Environment Variables Configuration Example
# Copy this file to .env and customize the values for your environment

# ================================
# Core Service Configuration
# ================================

# GitHub API Configuration (REQUIRED)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
MANAGER_REPO=your_username/claude-manager-service

# Repository Scanning Configuration  
REPOS_TO_SCAN=repo1,repo2,repo3  # Comma-separated list
SCAN_FOR_TODOS=true
SCAN_OPEN_ISSUES=true

# AI Service Configuration
TERRAGON_USERNAME=@terragon-labs
TERRAGON_TOKEN=your_terragon_token_here  # Optional
CLAUDE_FLOW_TOKEN=your_claude_flow_token_here  # Optional

# ================================
# Database Configuration
# ================================

# Database Settings
DATABASE_PATH=./data/claude_manager.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30.0

# ================================
# Performance & Monitoring
# ================================

# Performance Monitoring
PERF_MONITORING_ENABLED=true
PERF_ALERT_DURATION=10.0
PERF_MAX_OPERATIONS=10000
PERF_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMITING_ENABLED=true  
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# ================================
# Security Configuration
# ================================

# Security Features
ENHANCED_SECURITY_ENABLED=true
SECURITY_MAX_CONTENT_LENGTH=50000
SECURITY_VALIDATE_TOKENS=true
SECURITY_ENCRYPT_SENSITIVE=true

# ================================
# Web Dashboard Configuration
# ================================

# Flask Web Server
FLASK_ENV=development  # development, production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
SECRET_KEY=your_secret_key_here

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# Logging Configuration  
# ================================

# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=./logs/claude_manager.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ================================
# Quantum Planning Configuration
# ================================

# Quantum Task Planner
QUANTUM_ENABLED=true
QUANTUM_COMPLEXITY_THRESHOLD=0.8
QUANTUM_OPTIMIZATION_LEVEL=2

# ================================
# Async Configuration
# ================================

# Async Operation Limits
MAX_CONCURRENT_SCANS=5
MAX_CONCURRENT_EXECUTIONS=3
ASYNC_TIMEOUT=300  # 5 minutes

# ================================
# Docker & Deployment
# ================================

# Container Configuration
CONTAINER_HEALTH_CHECK_INTERVAL=30
CONTAINER_MEMORY_LIMIT=512M
CONTAINER_CPU_LIMIT=1.0

# ================================
# External Service Integration
# ================================

# Prometheus Metrics (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# OpenTelemetry Tracing (Optional)  
OTEL_ENABLED=false
OTEL_SERVICE_NAME=claude-manager-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ================================
# Development & Testing
# ================================

# Development Mode
DEV_MODE=true
DEV_MOCK_EXTERNAL_APIS=false
DEV_SKIP_VALIDATIONS=false

# Testing Configuration  
TEST_DATABASE_PATH=./test_data/test.db
TEST_TIMEOUT=60
TEST_PARALLEL_WORKERS=4

# ================================
# Advanced Features
# ================================

# Chaos Engineering
CHAOS_ENABLED=false
CHAOS_FAILURE_RATE=0.1
CHAOS_LATENCY_INJECTION=false

# Auto-scaling
AUTO_SCALING_ENABLED=false  
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_TARGET_CPU=70

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups/

# ================================
# Notification Configuration
# ================================

# Email Notifications (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=claude-manager@yourcompany.com

# Slack Notifications (Optional)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ================================
# Environment-Specific Overrides
# ================================

# Production Overrides
# Uncomment and modify for production deployment
# LOG_LEVEL=WARNING
# FLASK_ENV=production
# FLASK_DEBUG=false
# DEV_MODE=false
# ENHANCED_SECURITY_ENABLED=true