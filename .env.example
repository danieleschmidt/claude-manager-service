# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_username
GITHUB_REPO=your_repo_name

# AI Service Configuration
TERRAGON_TOKEN=your_terragon_token
CLAUDE_FLOW_TOKEN=your_claude_flow_token

# Database Configuration
DATABASE_URL=sqlite:///data/tasks.db

# Performance Configuration
PERF_ALERT_DURATION=15.0
PERF_MAX_OPERATIONS=20000
PERF_RETENTION_HOURS=168
PERF_MEMORY_THRESHOLD=500
PERF_CPU_THRESHOLD=80

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
GITHUB_API_RATE_LIMIT=5000

# Security Configuration
SECURITY_MAX_CONTENT_LENGTH=75000
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_CONTENT_TYPE_VALIDATION=true
SECURITY_ENABLE_CSRF=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=json
LOG_ROTATION=daily

# Feature Flags
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ENHANCED_SECURITY=true
ENABLE_AUTONOMOUS_MODE=true
ENABLE_WEB_DASHBOARD=true
ENABLE_REAL_TIME_UPDATES=true

# Web Dashboard Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_DEBUG=false
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=9090
MONITORING_HEALTH_CHECK_INTERVAL=30

# External Service Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Task Processing Configuration
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=3600
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# Development Configuration
DEVELOPMENT_MODE=false
DEBUG_SQL_QUERIES=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false